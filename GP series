long long binpow(long long a, long long b, long long m) {
        a %= m;
        long long res = 1;
        while (b > 0) {
            if (b & 1)
                res = res * a % m;
            a = a * a % m;
            b >>= 1;
        }
        return res;
    }

   	int Nth_term(int a, int r, int n){
   	    const int mod = 1e9 + 7;
   	    return a * binpow(r, n-1, mod) % mod;
